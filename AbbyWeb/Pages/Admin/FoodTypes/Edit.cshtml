@page
@model EditModel


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit @Model.FoodType.Name</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input hidden asp-for="@Model.FoodType.Id" />
        <div class="mb-3">
            <label asp-for="FoodType.Name"></label>
            <input asp-for="@Model.FoodType.Name" class="form-control" />
            <span asp-validation-for="FoodType.Name" class="text-danger"></span>
        </div>

        <a asp-page="Index" class="btn btn-info " style="width:150px;">Back</a>
        <button type="submit" class="btn btn-primary " style="width:150px;">Edit</button>



    </div>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

