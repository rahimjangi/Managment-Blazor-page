@page
@model CreateModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="MenuItem.Name"></label>
            <input asp-for="@Model.MenuItem.Name" class="form-control"/>
            <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MenuItem.Description"></label>
            <input asp-for="@Model.MenuItem.Description" class="form-control" />
            <span asp-validation-for="MenuItem.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MenuItem.Image"></label>
            <input asp-for="@Model.MenuItem.Image" class="form-control" />
            <span asp-validation-for="MenuItem.Image" class="text-danger"></span>
        </div>
        <a asp-page="Index" class="btn btn-info " style="width:150px;">Back</a>
        <button type="submit" class="btn btn-primary " style="width:150px;">Create</button>
    </div>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
