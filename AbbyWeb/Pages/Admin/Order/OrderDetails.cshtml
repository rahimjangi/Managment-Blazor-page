@page
@model AbbyWeb.Pages.Admin.Order.OrderDetailsModel
@using App.Utility

<form method="post">
    <div class="border p-4 ml-1 backgroundWhite mt-4">
        <div class="row pb-1">
            <div class="col-9 col-md-8">
                <p class="h2 text-primary">Order Details</p>
            </div>
            <div class="col-3 col-md-4">
                <a asp-page="/Admin/Order/OrderList" class="btn btn-outline-primary form-control">Back to orders</a>
            </div>
        </div>
        <hr />
        <div class="row pt-2">
            <div class="col-lg-8 col-12" style="border-right: 1px solid #bbb9b9">
                <div class="row form-group py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Name
                    </div>
                    <div class="col-md-9 col-12">
                        <input asp-for="@Model.OrderDetailsVM.OrderHeader.PickUpName" disabled class="form-control" />
                    </div>
                </div>
                <div class="row form-group py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Email
                    </div>
                    <div class="col-md-9 col-12">
                        <input asp-for="@Model.OrderDetailsVM.OrderHeader.ApplicationUser.Email" disabled class="form-control" />
                    </div>
                </div>
                <div class="row form-group py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Phone Number
                    </div>
                    <div class="col-md-9 col-12">
                        <input asp-for="@Model.OrderDetailsVM.OrderHeader.PhoneNumber" disabled class="form-control" />
                    </div>
                </div>
                <div class="row form-group py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Order Total
                    </div>
                    <div class="col-md-9 col-12">
                        <input asp-for="@Model.OrderDetailsVM.OrderHeader.OrderTotal" disabled class="form-control" />
                    </div>
                </div>
                <div class="row form-group py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Order DateTime
                    </div>
                    <div class="col-md-9 col-12">
                        <input asp-for="@Model.OrderDetailsVM.OrderHeader.PickUpTime" disabled class="form-control" />
                    </div>
                </div>
                <div class="row form-group py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Comments
                    </div>
                    <div class="col-md-9 col-12">
                        <textarea asp-for="@Model.OrderDetailsVM.OrderHeader.Comments" disabled class="form-control" rows="3"></textarea>
                    </div>
                </div>

            </div>
            <div class="col-lg-4 col-12">
                <button type="submit" disabled class="btn btn-outline-info form-control">@Model.OrderDetailsVM.OrderHeader.Status</button>
                <h4 class="d-flex justify-content-between align-content-center mb-3 pt-3">

                    <span class="text-muted">Order ID</span>
                    <span class="badge badge-pill badge-secondry">@Model.OrderDetailsVM.OrderHeader.Id</span>
                </h4>
                <ul class="list-group mb-4">
                    @foreach (var item in Model.OrderDetailsVM.OrderDetailsList)
                    {
                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <div>
                                <h6 class="my-0">@item.Name</h6>
                                <small class="text-muted">Quantity: @item.Count</small>
                            </div>
                            <span class="text-muted">@(item.Price * item.Count)</span>
                        </li>
                    }

                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <span class="text-info">Total (USD)</span>
                        <strong class="text-info">$@Model.OrderDetailsVM.OrderHeader.OrderTotal</strong>
                    </li>
                </ul>

                <div class="row pt-3">
                    @if (Model.OrderDetailsVM.OrderHeader.Status == SD.StatusReady &&
                    (User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.FrontDeskRole)))
                    {
                        <div class="col-12 pb-2">
                            <button type="submit" disabled class="btn btn-primary form-control" asp-page-handler="OrderCompleted" asp-route-orderId="@Model.OrderDetailsVM.OrderHeader.Id">Complete Order</button>
                        </div>
                    }
                    @if ((User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.FrontDeskRole))
                    && (Model.OrderDetailsVM.OrderHeader.Status == SD.StatusReady ||
                    Model.OrderDetailsVM.OrderHeader.Status == SD.StatusSubmitted ||
                    Model.OrderDetailsVM.OrderHeader.Status == SD.StatusInProcess))
                    {
                        <div class="col-6">
                            <button type="submit" class="btn btn-warning form-control" asp-page-handler="OrderCancel" asp-route-orderId="@Model.OrderDetailsVM.OrderHeader.Id"><i class="bi bi-x-square"></i> Cancen Order</button>
                        </div>

                        <div class="col-6">
                            <button type="submit" class="btn btn-danger form-control" asp-page-handler="OrderRefund" asp-route-orderId="@Model.OrderDetailsVM.OrderHeader.Id"><i class="bi bi-currency-dollar"></i> Refund Order</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</form>