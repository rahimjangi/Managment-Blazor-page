@page
@model AbbyWeb.Pages.Categories.DeleteModel
@{
}


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete @Model.Category.Name</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input hidden asp-for="@Model.Category.Id"  />
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="@Model.Category.Name" class="form-control" readonly="@(true)" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="@Model.Category.DisplayOrder" class="form-control" readonly="@(true)" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>

        <a asp-page="Index" class="btn btn-info " style="width:150px;">Back</a>
        <button type="submit" class="btn btn-primary " style="width:150px;">Delete</button>



    </div>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
