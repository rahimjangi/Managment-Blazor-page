@page
@model AbbyWeb.Pages.Customer.Home.DetailsModel

<div class="">
    <form method="post">
        <input asp-for="@Model.ShoppingCart.MenuItemId" />
        <input asp-for="@Model.ShoppingCart.ApplicationUserId" hidden />
        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header">
                    <div class="row text-light ml-0">
                        <div class="col-12 col-md-6 pt-2">
                            <h1 class="text-primary">@Model.ShoppingCart.MenuItem.Name</h1>
                        </div>
                        <div class="col-12 col-md-6 pt-2 text-end">
                            <h1 class="text-muted">$@Model.ShoppingCart.MenuItem.Price</h1>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">
                                    <div class="col-12">
                                        <span class="badge bg-warning p-3 h3">@Model.ShoppingCart.MenuItem.Category.Name</span>
                                        <span class="badge bg-dark p-3">@Model.ShoppingCart.MenuItem.FoodType.Name</span>
                                        <h3 class="text-success"></h3>
                                        <p class="text-secondary">@Html.Raw(Model.ShoppingCart.MenuItem.Description)</p>
                                        <div class="form-floating my-2">
                                            <input asp-for="@Model.ShoppingCart.Count" class="form-control" type="number" area-required="true" min="1" max="10" />
                                            <label asp-for="@Model.ShoppingCart.Count"></label>
                                            <span asp-validation-for="@Model.ShoppingCart.Count" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.ShoppingCart.MenuItem.Image" width="100%" cla ss="rounded"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1">
                            <a class="btn btn-success btn-square form-control" style="height:50px">Back to list</a>
                        </div>
                        <div class="col-12 col-md-6">
                            <button type="submit"  class="btn btn-primary btn-square form-control" style="height:50px">Add</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{

        <partial name="_ValidationScriptsPartial" />
    }
}                        